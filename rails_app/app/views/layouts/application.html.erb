<!DOCTYPE     <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "users_inline_edit", "data-turbo-track": "reload" %>

    <!-- Add Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
<html>
  <head>
    <title>Rails Debugging Demo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "minimal_styles", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application.tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Add Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100 min-h-screen">
    <nav class="bg-gray-100 flex items-center justify-between p-2">
      <div class="flex items-center">
        <div class="text-lg font-bold">
          <%= link_to "Debugging Demo", root_path %>
          <span class="bg-white text-indigo-600 text-xs font-bold px-1.5 py-0.5 rounded ml-2">DEV</span>
        </div>
      </div>
      <div class="flex items-center text-xs">
        <div class="px-2 py-1">xs</div>
        <div class="px-2 py-1">sm</div>
        <div class="px-2 py-1">md</div>
        <div class="px-2 py-1">lg</div>
        <div class="px-2 py-1">xl</div>
        <div class="px-2 py-1 bg-white text-indigo-600 font-medium">Full</div>
      </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <%= notice %>
        </div>
      <% end %>

      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
