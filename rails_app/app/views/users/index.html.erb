<div class="bg-gradient-to-br from-purple-50 to-blue-50 rounded-xl shadow-lg overflow-hidden">
  <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 p-6">
    <h1 class="text-3xl font-bold text-white tracking-tight">Users</h1>
    <p class="text-indigo-100 mt-2">Manage your system users</p>
  </div>

  <div class="bg-gray-50">
    <div class="w-full">
      <div class="grid grid-cols-3 p-4 bg-gray-100">
        <div class="font-semibold">Name</div>
        <div class="font-semibold">Email</div>
        <div class="font-semibold">Role</div>
      </div>

      <% @users.each_with_index do |user, index| %>
        <%= render 'inline_user_form', user: user, row_class: (index.even? ? 'bg-white' : 'bg-gray-50') %>
      <% end %>
      
      <div id="new-user-form-container" style="display: none;">
        <%= render 'inline_new_user_form' %>
      </div>
    </div>
  </div>
  
  <div class="p-6 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 flex justify-end">
    <button id="toggle-new-user-form" class="bg-gradient-to-r from-green-600 to-emerald-600 text-white px-6 py-2 rounded-lg hover:from-green-700 hover:to-emerald-700 transition shadow-sm flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      <span id="toggle-button-text">Add New User</span>
    </button>
  </div>
</div>
