<div class="bg-gradient-to-br from-purple-50 to-blue-50 rounded-xl shadow-lg overflow-hidden">
  <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 p-6">
    <h1 class="text-3xl font-bold text-white tracking-tight">Users</h1>
    <p class="text-indigo-100 mt-2">Manage your system users</p>
  </div>

  <div class="bg-gray-50">
  <div class="p-4 bg-indigo-600 text-white">
    <h1 class="text-2xl font-bold">Users</h1>
    <p class="text-sm opacity-80">Manage your system users</p>
  </div>

  <div class="w-full">
    <div class="grid grid-cols-3 p-4 bg-gray-100">
      <div class="font-semibold">Name</div>
      <div class="font-semibold">Email</div>
      <div class="font-semibold">Role</div>
    </div>

    <% @users.each_with_index do |user, index| %>
      <div class="grid grid-cols-3 items-center border-t py-4 px-4 <%= index.even? ? 'bg-white' : 'bg-gray-50' %> hover:bg-gray-100">
        <div class="flex items-center">
          <input type="text" value="<%= user.name %>" class="border-b border-gray-300 px-0 bg-transparent" placeholder="user.name">
        </div>
        <div>
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
            <input type="text" value="<%= user.email %>" class="border-b border-gray-300 px-0 bg-transparent" placeholder="user.email">
          </div>
        </div>
        <div class="flex items-center justify-between">
          <select class="border border-gray-300 rounded p-1 bg-white">
            <option>user</option>
            <option>admin</option>
          </select>
          <div>
            <button class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600">Save</button>
            <button class="bg-red-500 text-white px-4 py-1 rounded ml-2 hover:bg-red-600">Delete</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  
  <div class="p-6 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 flex justify-end">
    <button class="bg-gradient-to-r from-green-600 to-emerald-600 text-white px-6 py-2 rounded-lg hover:from-green-700 hover:to-emerald-700 transition shadow-sm flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      Add New User
    </button>
  </div>
</div>
