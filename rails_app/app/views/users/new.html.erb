<div class="bg-white rounded-lg shadow p-6">
  <h1 class="text-2xl font-bold mb-4">New User</h1>

  <%= form_with model: @user, local: true, class: "space-y-4" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
    </div>

    <div>
      <%= form.check_box :active, class: "mr-2" %>
      <%= form.label :active, "Active user", class: "text-sm text-gray-700" %>
    </div>

    <div>
      <%= form.submit "Create User", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      <%= link_to "Cancel", users_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 ml-2" %>
    </div>
  <% end %>
</div>
