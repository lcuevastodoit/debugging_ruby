<div class="bg-white rounded-lg shadow p-6">
  <h1 class="text-2xl font-bold mb-4"><%= @user.name %></h1>

  <div class="mb-4">
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Active:</strong> <%= @user.active? ? "Yes" : "No" %></p>
    <p><strong>Joined:</strong> <%= formatted_date(@user.created_at) %></p>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-2">Analytics</h2>
    <div class="bg-gray-50 p-4 rounded">
      <% @analytics.each do |key, value| %>
        <p><strong><%= key.to_s.humanize %>:</strong> <%= value %></p>
      <% end %>
    </div>
  </div>

  <div class="mb-4">
    <h2 class="text-xl font-semibold mb-2">Posts</h2>
    <%= link_to "View All Posts", user_posts_path(@user), class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
    <%= link_to "New Post", new_user_post_path(@user), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>

  <div class="mt-6">
    <%= link_to "Edit User", edit_user_path(@user), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 mr-2" %>
    <%= link_to "Back to Users", users_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
  </div>
</div>
