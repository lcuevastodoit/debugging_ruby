<div class="bg-purple-50 border border-purple-200 rounded-lg p-4 mb-4 animate-slide-in">
  <div class="flex items-center space-x-3">
    <span class="text-3xl">🏆</span>
    <div class="flex-1">
      <h4 class="font-bold text-purple-800 mb-1">Achievement Unlocked!</h4>
      <% if achievement_type == "streak" %>
        <p class="text-purple-700">
          <strong>Streak Master!</strong> - Completed <%= streak_count %> objectives in a row!
        </p>
      <% end %>
      <p class="text-xs text-purple-600">
        <%= timestamp.strftime("%H:%M:%S") %>
      </p>
    </div>
    <div class="text-purple-700 font-bold text-xl">
      🔥<%= streak_count %>
    </div>
  </div>
</div>

<style>
@keyframes slide-in {
  from { opacity: 0; transform: translateX(100%); }
  to { opacity: 1; transform: translateX(0); }
}

.animate-slide-in {
  animation: slide-in 0.5s ease-out;
}
</style>
