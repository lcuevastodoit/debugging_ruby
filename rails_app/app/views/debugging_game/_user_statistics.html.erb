<div class="bg-white rounded-lg shadow-lg p-6">
  <h3 class="text-xl font-semibold text-gray-800 mb-6">📊 Your Statistics</h3>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <!-- Completion Rate -->
    <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-blue-600 font-medium">Completion Rate</span>
        <span class="text-2xl">📈</span>
      </div>
      <div class="text-2xl font-bold text-blue-800"><%= @user_stats[:completion_rate] %>%</div>
      <div class="mt-2 bg-blue-200 rounded-full h-2">
        <div class="bg-blue-500 rounded-full h-2 transition-all duration-500" 
             style="width: <%= @user_stats[:completion_rate] %>%"></div>
      </div>
    </div>
    
    <!-- Efficiency Score -->
    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-green-600 font-medium">Efficiency Score</span>
        <span class="text-2xl">⚡</span>
      </div>
      <div class="text-2xl font-bold text-green-800"><%= @user_stats[:efficiency_score] %></div>
      <div class="text-xs text-green-600 mt-1">Points minus penalties</div>
    </div>
    
    <!-- Best Streak -->
    <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-orange-600 font-medium">Best Streak</span>
        <span class="text-2xl">🔥</span>
      </div>
      <div class="text-2xl font-bold text-orange-800"><%= @user_stats[:best_streak] %></div>
      <div class="text-xs text-orange-600 mt-1">Consecutive completions</div>
    </div>
    
    <!-- Favorite Tool -->
    <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-purple-600 font-medium">Favorite Tool</span>
        <span class="text-2xl">🛠️</span>
      </div>
      <div class="text-lg font-bold text-purple-800 capitalize"><%= @user_stats[:favorite_tool] %></div>
      <div class="text-xs text-purple-600 mt-1">Most used debugger</div>
    </div>
    
    <!-- Hints Usage -->
    <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-yellow-600 font-medium">Hints per Objective</span>
        <span class="text-2xl">💡</span>
      </div>
      <div class="text-2xl font-bold text-yellow-800"><%= @user_stats[:hints_per_objective] %></div>
      <div class="text-xs text-yellow-600 mt-1">Learning efficiency</div>
    </div>
    
    <!-- Level Progress -->
    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-indigo-600 font-medium">Level Progress</span>
        <span class="text-2xl">🎯</span>
      </div>
      <div class="text-2xl font-bold text-indigo-800"><%= @user_stats[:level_progress] %>%</div>
      <div class="mt-2 bg-indigo-200 rounded-full h-2">
        <div class="bg-indigo-500 rounded-full h-2 transition-all duration-500" 
             style="width: <%= @user_stats[:level_progress] %>%"></div>
      </div>
    </div>
  </div>
</div>
