<div class="flex items-center justify-between bg-gradient-to-r from-blue-500 to-purple-600 text-white p-4 rounded-lg">
  <div class="flex items-center space-x-6">
    <div class="text-center">
      <div class="text-2xl"><%= game_progress&.level_emoji || '🐣' %></div>
      <div class="text-xs font-medium"><%= game_progress&.level_title || 'Novato' %></div>
    </div>
    <div>
      <div class="text-lg font-bold"><%= game_progress&.total_points || 0 %> pts</div>
      <div class="text-xs opacity-90">Total Points</div>
    </div>
    <div>
      <div class="text-lg font-bold">🔥 <%= game_progress&.current_streak || 0 %></div>
      <div class="text-xs opacity-90">Current Streak</div>
    </div>
    <div>
      <div class="text-lg font-bold">✅ <%= game_progress&.completed_objectives&.length || 0 %></div>
      <div class="text-xs opacity-90">Completed</div>
    </div>
  </div>
  
  <% if defined?(objective) && objective %>
    <div class="text-right">
      <div class="text-green-300 text-sm font-medium">
        🎉 +<%= points_earned %> pts
      </div>
      <div class="text-xs opacity-90">
        via <%= tool_used %>
      </div>
    </div>
  <% end %>
</div>
