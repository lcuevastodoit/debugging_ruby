#!/usr/bin/env bash

# Minimal CSS setup without Tailwind
# This script provides a fallback method using plain CSS

set -e # Exit on error

echo "🚀 Setting up minimal CSS (without Tailwind)"

echo "📁 Creating necessary directories..."
mkdir -p app/assets/builds
mkdir -p app/assets/stylesheets

echo "📝 Creating a minimal CSS file..."
cat > app/assets/stylesheets/minimal.css << EOL
/* Minimal CSS styles */
:root {
  --primary: #4338ca;
  --primary-hover: #3730a3;
  --secondary: #a21caf;
  --secondary-hover: #86198f;
  --danger: #dc2626;
  --success: #16a34a;
  --gray-100: #f3f4f6;
  --gray-300: #d1d5db;
}

body {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, 
    "Helvetica Neue", Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f9fafb;
  color: #111827;
}

.container {
  width: 100%;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Buttons */
.btn {
  display: inline-block;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-weight: 500;
  cursor: pointer;
  border: none;
  transition: background-color 0.2s;
}

.btn-primary {
  background-color: var(--primary);
  color: white;
}
.btn-primary:hover {
  background-color: var(--primary-hover);
}

.btn-secondary {
  background-color: var(--secondary);
  color: white;
}
.btn-secondary:hover {
  background-color: var(--secondary-hover);
}

.btn-danger {
  background-color: var(--danger);
  color: white;
}

.btn-success {
  background-color: var(--success);
  color: white;
}

/* Cards */
.card {
  background-color: white;
  border-radius: 0.75rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

/* Forms */
.input {
  width: 100%;
  padding: 0.5rem 0;
  border: none;
  border-bottom: 2px solid var(--gray-300);
  background-color: transparent;
  transition: border-color 0.2s;
}

.input:focus {
  outline: none;
  border-color: var(--primary);
}

/* Table-like grids */
.grid {
  display: grid;
}

.grid-cols-3 {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

/* Spacing */
.p-4 {
  padding: 1rem;
}

.py-4 {
  padding-top: 1rem;
  padding-bottom: 1rem;
}

.px-4 {
  padding-left: 1rem;
  padding-right: 1rem;
}

/* Text styling */
.text-2xl {
  font-size: 1.5rem;
  line-height: 2rem;
}

.font-bold {
  font-weight: 700;
}

.font-semibold {
  font-weight: 600;
}

/* Flexbox */
.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

/* Borders */
.border-t {
  border-top: 1px solid var(--gray-300);
}

.border-b {
  border-bottom: 1px solid var(--gray-300);
}
EOL

echo "🔗 Linking CSS file..."
cp app/assets/stylesheets/minimal.css app/assets/builds/application.css

echo "✅ Minimal CSS setup complete!"
echo "You can now style your app with basic CSS classes"