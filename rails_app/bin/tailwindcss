#!/usr/bin/env sh

# This script ensures tailwindcss is properly watching for changes
# and rebuilding the CSS files when changes are detected

# Check if npm or yarn is installed and use the appropriate command
if command -v npm &> /dev/null; then
  exec npm run dev:css
elif command -v yarn &> /dev/null; then
  exec yarn dev:css
else
  echo "Error: Neither npm nor yarn is installed. Please install one of them to run this script."
  exit 1
fi